{
	"name": "create-rakkas-app",
	"version": "0.3.0",
	"description": "Development tools for Rakkas.js",
	"scripts": {
		"prepublishOnly": "pnpm build && bash copy-templates.sh",
		"dev": "esbuild --bundle src/index.ts --outfile=create-rakkas-app.js --platform=node --watch",
		"build": "esbuild --bundle src/index.ts --outfile=create-rakkas-app.js --platform=node",
		"precommit": "lint-staged --no-stash",
		"check": "run-p typecheck lint:ts",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint:ts": "eslint --max-warnings=0 src"
	},
	"author": "Fatih Ayg√ºn <cyco130@gmail.com>",
	"license": "MIT",
	"repository": "https://github.com/rakkasjs/rakkasjs",
	"homepage": "https://rakkasjs.org",
	"keywords": [
		"react",
		"vite",
		"ssr"
	],
	"bin": {
		"create-rakkas-app": "create-rakkas-app.js"
	},
	"files": [
		"templates/**/*"
	],
	"devDependencies": {
		"@types/node": "^16.7.1",
		"@types/react": "^17.0.19",
		"@types/which": "^2.0.1",
		"@typescript-eslint/eslint-plugin": "^4.29.2",
		"@typescript-eslint/parser": "^4.29.2",
		"commander": "^8.1.0",
		"cpr": "^3.0.1",
		"esbuild": "^0.12.22",
		"eslint": "^7.32.0",
		"eslint-plugin-import": "^2.24.1",
		"eslint-plugin-only-warn": "^1.0.3",
		"ink": "^3.0.9",
		"ink-multi-select": "^2.0.0",
		"ink-select-input": "^4.2.0",
		"ink-spinner": "^4.0.2",
		"jest": "^27.0.6",
		"lint-staged": "^11.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.2",
		"react": "^17.0.2",
		"rimraf": "^3.0.2",
		"typescript": "^4.3.5",
		"which": "^2.0.2"
	},
	"dependencies": {
		"enquirer": "^2.3.6",
		"ink-text-input": "^4.0.1"
	}
}
