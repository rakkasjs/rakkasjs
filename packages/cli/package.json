{
	"name": "@rakkasjs/cli",
	"version": "0.5.0",
	"description": "Development tools for Rakkas.js",
	"scripts": {
		"prepublishOnly": "pnpm build",
		"dev": "rimraf dist && node build.mjs --watch",
		"build": "rimraf dist && node build.mjs",
		"precommit": "lint-staged --no-stash",
		"check": "run-p typecheck lint:ts test",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint:ts": "eslint --max-warnings=0 src",
		"test": "vitest run src"
	},
	"author": "Fatih Ayg√ºn <cyco130@gmail.com>",
	"license": "MIT",
	"repository": "https://github.com/rakkasjs/rakkasjs",
	"homepage": "https://rakkasjs.org",
	"keywords": [
		"react",
		"vite",
		"nextjs",
		"ssr"
	],
	"bin": {
		"rakkas": "rakkas.js"
	},
	"module": "dist/index.js",
	"files": [
		"rakkas.js",
		"dist/**/*",
		"server-entry.js",
		"*.d.ts"
	],
	"peerDependencies": {
		"rakkasjs": "workspace:*",
		"react": "^17",
		"react-dom": "^17"
	},
	"devDependencies": {
		"@cloudflare/kv-asset-handler": "^0.2.0",
		"@cloudflare/workers-types": "^3.2.0",
		"@types/jsdom": "^16.2.13",
		"@types/micromatch": "^4.0.2",
		"@types/node": "^16.11.12",
		"@types/node-fetch": "2.5.12",
		"@types/rimraf": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^5.7.0",
		"@typescript-eslint/parser": "^5.7.0",
		"esbuild-node-externals": "^1.4.1",
		"esbuild-plugin-alias": "^0.2.1",
		"eslint": "^8.4.1",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-only-warn": "^1.0.3",
		"lint-staged": "^12.1.2",
		"netlify-lambda-types": "^1.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.5.1",
		"rakkasjs": "workspace:*",
		"sirv": "^1.0.19",
		"typescript": "^4.5.4",
		"vitest": "^0.0.94"
	},
	"dependencies": {
		"@babel/core": "^7.16.5",
		"@vitejs/plugin-react": "1.1.3",
		"chalk": "^4.1.2",
		"cheerio": "^1.0.0-rc.10",
		"commander": "^8.3.0",
		"esbuild": "^0.14.3",
		"fast-glob": "^3.2.7",
		"get-port": "^5.1.1",
		"html-entities": "^2.3.2",
		"micromatch": "^4.0.4",
		"node-fetch": "^2.6.6",
		"open": "^8.4.0",
		"rimraf": "^3.0.2",
		"vite": "2.7.3",
		"vite-plugin-virtual": "^0.1.1"
	}
}
