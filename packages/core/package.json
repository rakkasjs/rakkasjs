{
	"name": "@rakkasjs/core",
	"version": "0.6.13",
	"type": "module",
	"files": [
		"dist"
	],
	"exports": {
		"./server": "./dist/server.js",
		"./vite-plugin": "./dist/vite-plugin.js"
	},
	"typesVersions": {
		"*": {
			"*": [
				"dist/*.d.ts"
			]
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"prepack": "rm -rf dist && pnpm build",
		"test": "pnpm test:typecheck && pnpm test:lint && pnpm test:unit && pnpm test:package",
		"test:unit": "vitest run --reporter=verbose",
		"test:typecheck": "tsc -p tsconfig.json --noEmit",
		"test:lint": "eslint . --max-warnings 0 --ignore-pattern dist",
		"test:package": "publint"
	},
	"description": "Rakkas.js core",
	"license": "MIT",
	"repository": "https://github.com/rakkasjs/rakkasjs",
	"homepage": "https://rakkasjs.org",
	"keywords": [
		"react",
		"vite",
		"nextjs",
		"ssr"
	],
	"peerDependencies": {
		"vite": "3 || 4"
	},
	"devDependencies": {
		"@cyco130/eslint-config": "^2.1.3",
		"@types/micromatch": "^4.0.2",
		"eslint": "^8.32.0",
		"prettier": "^2.8.3",
		"publint": "^0.1.8",
		"tsup": "^6.5.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.3"
	},
	"dependencies": {
		"@hattip/adapter-node": "^0.0.27",
		"@hattip/compose": "^0.0.27",
		"@hattip/core": "^0.0.27",
		"@types/node": "^18.11.18",
		"@vavite/connect": "^1.5.3",
		"@vavite/expose-vite-dev-server": "1.5.3",
		"fast-glob": "^3.2.12",
		"micromatch": "^4.0.5",
		"picocolors": "^1.0.0"
	}
}
