{
	"name": "rakkasjs",
	"version": "0.5.2",
	"description": "Lightning fast Next.js alternative powered by Vite",
	"scripts": {
		"prepack": "pnpm build",
		"build": "tsup",
		"dev": "tsup --watch",
		"precommit": "lint-staged --no-stash",
		"check": "run-p typecheck lint:ts test",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint:ts": "eslint --max-warnings=0 src",
		"test": "vitest run --dom=happy-dom src"
	},
	"author": "Fatih Ayg√ºn <cyco130@gmail.com>",
	"license": "MIT",
	"repository": "https://github.com/rakkasjs/rakkasjs",
	"homepage": "https://rakkasjs.org",
	"keywords": [
		"react",
		"vite",
		"nextjs",
		"ssr"
	],
	"files": [
		"dist/**/*",
		"*.d.ts"
	],
	"exports": {
		".": "./dist/index.mjs",
		"./server": "./dist/server.mjs",
		"./client": "./dist/client.mjs",
		"./placeholder-loader": "./dist/placeholder-loader.mjs",
		"./language-redirect-client": "./dist/language-redirect-client.mjs"
	},
	"dependencies": {
		"@types/react": "^17.0.37",
		"vite": "2.7.3"
	},
	"peerDependencies": {
		"react": "^17",
		"react-dom": "^17",
		"react-helmet-async": "^1"
	},
	"devDependencies": {
		"@types/react-dom": "^17.0.11",
		"@typescript-eslint/eslint-plugin": "^5.7.0",
		"@typescript-eslint/parser": "^5.7.0",
		"core-js": "^3.19.3",
		"devalue": "^2.0.1",
		"eslint": "^8.4.1",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-only-warn": "^1.0.3",
		"eslint-plugin-react": "^7.27.1",
		"eslint-plugin-react-hooks": "^4.3.0",
		"happy-dom": "^2.24.5",
		"knave-react": "^1.1.0",
		"lint-staged": "^12.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.5.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-helmet-async": "^1.1.2",
		"tsup": "^5.11.5",
		"typescript": "^4.5.4",
		"vitest": "^0.0.94"
	}
}
